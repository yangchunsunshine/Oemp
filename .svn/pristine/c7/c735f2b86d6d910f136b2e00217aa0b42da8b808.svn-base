<script type="text/javascript">
	function subInvst(){
		//姓名
		var invest_name = document.getElementById("invest_name").value;
		if(invest_name.length<1){
			alert("请输入姓名！");
			return ;
		}
		//公司
		var invest_comp = document.getElementById("invest_comp").value;
		if(invest_comp.length<1){
			alert("请输入公司名称！");
			return ;
		}
		//职务
		var invest_post = document.getElementById("invest_post").value;
		if(invest_post.length<1){
			alert("请输入职务！");
			return ;
		}
		//手机
		var invest_phone = document.getElementById("invest_phone").value;
		if(invest_phone.length<1){
			alert("请输入手机号！");
			return ;
			
		}
		var pattern = /^1[34578]\d{9}$/; 
		if(pattern.test(invest_phone)==false){
			alert("手机号不合法，请输入手机号！");
			return ;
		} 
		//邮箱
		var invest_email = document.getElementById("invest_email").value;
		if(invest_email.length<1){
			alert("请输入邮箱号！");
			return ;
		}
		
		var reg = /^\w+((-\w+)|(\.\w+))*\@[A-Za-z0-9]+((\.|-)[A-Za-z0-9]+)*\.[A-Za-z0-9]+$/; //验证邮箱的正则表达式
		if(!reg.test(invest_email))
		{
			alert("邮箱格式不对");
			return false;
		}

		//投资内容
		var invest_desc = document.getElementById("invest_desc").value;
		if(invest_desc.length<1){
			alert("请输入投资内容！");
			return ;
		}
		
		
		$.ajax( { 
			type : 'post',
			data : {invest_name:invest_name,invest_comp:invest_comp,invest_post:invest_post,
				invest_phone:invest_phone,invest_email:invest_email,invest_desc:invest_desc
			},
			dataType : 'json',
			url : '/Oemp/business/asyn/subInvst',
			beforeSubmit : function() {
				tips = layer.msg("正在提交...",{icon : 16,time : 0, shade: [0.1]});
			},
			success : function(result) {
				if(result.code==0){
					alert("投资意向信息保存成功！！");
				}else {
					alert("投资意向信息保存失败！！");
				}
			},
			error : function(result) {
				alert("亲!您的网络不给力哦~");
			}
		});
		
	}
</script>

